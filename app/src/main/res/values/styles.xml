<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/blue</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemIconTint">@drawable/bottom_navigation_item_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_item_selector</item>
    </style>

    <style name="itemTextAppearanceActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="itemTextAppearanceInactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13sp</item>
    </style>

</resources>
